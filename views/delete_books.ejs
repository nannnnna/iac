<!DOCTYPE html>
<html>
<head>
    <title>Delete Books</title>
</head>
<body>
<h1>Delete Books</h1>
<% if (books.length > 0) { %>
    <form id="deleteForm" method="post" action="/delete_books">
        <table border="1">
            <thead>
            <tr>
                <th>Select</th>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><input type="checkbox" name="bookId" value="<%= book.id %>"></td>
                    <td><%= book.id %></td>
                    <td><%= book.title %></td>
                    <td><%= book.description %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        <button type="submit">Delete Selected</button>
    </form>
<% } else { %>
    <p>No books available to delete.</p>
<% } %>
</body>
</html>
